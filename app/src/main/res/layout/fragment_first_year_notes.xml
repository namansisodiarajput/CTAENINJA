<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstYearNotesFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/CS_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="CS"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />

            <Button
                android:id="@+id/PHYSICS_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="PHYSICS"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />

            <Button
                android:id="@+id/ELECTRICAL_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="ELECTRICAL"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />

            <Button
                android:id="@+id/MECHANICS_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="MECHANICS"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />

            <Button
                android:id="@+id/DRAWING_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="ENGINEERING DRAWING"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />

            <Button
                android:id="@+id/MECHANICAL_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="MECHANICAL"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />

            <Button
                android:id="@+id/CHEMISTRY_FIRSTYEAR_BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="CHEMISTRY"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="250dp" />
        </LinearLayout>
